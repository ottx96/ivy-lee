<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.web.WebView?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="views.TaskCell"
            prefHeight="400.0" prefWidth="600.0">

    <BorderPane fx:id="bp_middleright" onMouseEntered="#mark" onMouseExited="#unmark" onMousePressed="#onClick" prefHeight="150.0" prefWidth="300.0" style="-fx-background-color: #84ee3f; -fx-border-color: #000000;" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <top>
            <Label fx:id="task_title_middle_right" text="Titel" textAlignment="CENTER" BorderPane.alignment="top_left">
                <font>
                    <Font name="Calibri Light" size="18.0" />
                </font>
                <BorderPane.margin>
                    <Insets left="10.0" top="5.0" />
                </BorderPane.margin>
            </Label>
        </top>
        <bottom>
            <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mouseTransparent="true" BorderPane.alignment="CENTER">
                <children>
                    <Label fx:id="time_middle_right" alignment="top_left" text="120 m">
                        <font>
                            <Font size="14.0" />
                        </font>
                        <HBox.margin>
                            <Insets bottom="2.0" left="4.0" right="2.0" top="2.0" />
                        </HBox.margin>
                    </Label>
                    <ProgressBar fx:id="progress_middle_right" maxWidth="1.7976931348623157E308" progress="1.0" HBox.hgrow="ALWAYS">
                        <HBox.margin>
                            <Insets bottom="2.0" top="2.0" />
                        </HBox.margin>
                    </ProgressBar>
                    <ProgressBar fx:id="progress_additional_middle_right" maxWidth="1.7976931348623157E308" prefHeight="18.0" prefWidth="71.0" progress="0.38">
                        <HBox.margin>
                            <Insets bottom="2.0" top="2.0" />
                        </HBox.margin>
                    </ProgressBar>
                    <ProgressIndicator fx:id="status_middle_right" progress="1.0">
                        <padding>
                            <Insets bottom="-18.0" />
                        </padding>
                        <HBox.margin>
                            <Insets bottom="2.0" right="4.0" top="2.0" />
                        </HBox.margin>
                    </ProgressIndicator>
                </children>
            </HBox>
        </bottom>
        <center>
            <WebView disable="true" opacity="0.8" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
        </center>
    </BorderPane>

</AnchorPane>
